<!DOCTYPE html>
<html>
  <head>
    <title>Bleeper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="container">
      <div class="row">
        <nav class="nav flex-column col-2">
          <%= image_tag "logo.jpg", class: "img-fluid" %>
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Bleeptags", bleeptags_path, class: "nav-link" %> 

          <% if @current_user.present? %>
              <%= link_to "My Profile", user_path(@current_user.id), class: "nav-link" %>
              <%= link_to "Sign out", login_path, class: "nav-link", :method => 'delete' %>
              <small>Signed in as: </small> <small> <%= @current_user.name %> </small>
          <% else %>
            <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
            <%= link_to "Sign In", login_path, class: "nav-link" %>
          <% end %>
        </nav>
        <div class="col-10">
          <%= yield %>
        </div>
      </div>
  </div>
  </body>
</html>
